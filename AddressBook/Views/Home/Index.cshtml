@model IEnumerable<AddressBook.Models.Contact>
@using AddressBook.Models

    @{
    ViewBag.Title = "Index";
    }

    <p>
        <div class="form-inline">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {

                @*<label class="control-label"> Filter by group:</label>*@
                <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5">
                    <div class="input-group">
                        @Html.DropDownList("GroupType",
                                EnumHelper.GetSelectList(typeof(Group.GroupType)),
                                "Select a Group Type", new { @class = "form-control" })
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default ">Filter<i class="glyphicon glyphicon-filter"></i></button>
                            <input type="hidden" name="Search" id="Search" value="@ViewBag.Search" />
                        </div>
                    </div>
                </div>
            }
        </div>

</p>
    <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name.LastName)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name.LastName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Index", "Edit", new { id = item.ContactId }, null) |
                        @Html.ActionLink("Details", "Details", new { id = item.ContactId }) |
                        @Html.ActionLink("Delete", "Index", "Delete", new { id = item.ContactId }, null)
                    </td>
                </tr>
            }

</table>
